@model IEnumerable<Model.Veiculo>

@{
    Layout = "_LayoutCliente";
    ViewData["Title"] = "Index";
}


<div class="w3-container mt-1">
    <h1>Veiculos Cadastrados</h1>
    <ul class="w3-ul w3-card-4 mt-5">
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {                    
                    <li class="w3-bar">
                        <span class="w3-bar-item w3-button w3-white w3-xlarge w3-right" style="color:black;margin-top: 15px;">
                            @Html.ActionLink("", "Delete", new { id = item.CodVeiculo }, new { @class = "fas fa-trash", @style = "color: red" })
                        </span>
                        <i class="fas fa-car w3-bar-item w3-circle w3-hide-small" style="font-size:30px; color: black; margin-top: 20px;"></i>
                        <div class="w3-bar-item">
                            <span class="w3-large">Placa @Html.DisplayFor(modelItem => item.Placa) </span><br>
                            <span style="color: darkgrey">Revanam: @Html.DisplayFor(modelItem => item.Renavam)</span><br />
                            <span style="color: darkgrey">Ano: @Html.DisplayFor(modelItem => item.Ano)</span>
                        </div>
                    </li>

                }
            }
            else
            {
                <h3>Nenhum Veiculo cadastrado</h3>
            }

        }
    </ul>

    <span>
        @Html.ActionLink("Adicionar Novo Veiculo", "Create", new { }, new { @class = "btn mt-4", @style = "background-color: rgb(157,203,43);text-decoration:none;color:black" })
    </span>

</div>